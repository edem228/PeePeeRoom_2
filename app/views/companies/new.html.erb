<%= form_for @company, html: { multipart: true } do |f| %>

  <div class="field">
    <%= f.label  :Photo_de_votre_deventure %><br />
    <%= f.file_field :image %>
  </div>

   <div class="field">
    <%= f.label :Nom_du_commerce %><br />
    <%= f.text_field :name %>
  </div>
​
  <div class="field">
    <%= f.label :Adresse %><br />
    <%= f.text_field :address %>
  </div>
​
  <div class="field">
    <%= f.label :Téléphone %><br />
    <%= f.telephone_field :phone_number %>
  </div>
​
  <div class="field">
    <%= f.label :Horaires %><br />
    <%= f.text_field :schedule %>
  </div>

  <div class="action">
    <%= f.submit "Envoyer" %>
  </div>
<% end %>



