<script types="text/javascript">handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, 

  function(){
  markers = handler.addMarkers([
    {
      "lat": <%=c.lat%>,
      "lng": <%=c.lng%>,
      "zoom": 20,
      "picture": {
        "url": "http://googlemaps.googlermania.com/google_maps_api_v3/en/Google_Maps_Marker.png",
        "width": 37,
        "height": 37
      },
      "infowindow": "<%= c.name %><br />Télépnone: <%= c.phone_number %><br />"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});

</script>

    <% end %> 


  </div>

</div>

