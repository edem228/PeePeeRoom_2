<script types="text/javascript">handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%=@company.lat%>,
      "lng": <%=@company.lng%>,
      "zoom": 20,
      "picture": {
        "url": "http://googlemaps.googlermania.com/google_maps_api_v3/en/Google_Maps_Marker.png",
        "width": 37,
        "height": 37
      },
      "infowindow": "<%= @company.name %><br />Télépnone: <%= @company.phone_number %><br />"
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>

